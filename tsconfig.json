{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES2020",
    // "jsx": "preserve",
    "paths": {
      "@theme-plume/*": [
        "./packages/theme/src/client/components/*"
      ],
      "@internal/*": [
        "./docs/.vuepress/.temp/internal/*"
      ]
    },
    "types": ["webpack-env", "vite/client", "@vuepress/client/types"]
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  },
  "include": [
    "packages/**/*",
    "docs/.vuepress/**/*"
  ],
  "exclude": [
    "node_modules",
    ".temp",
    "lib",
    "dist"
  ]
}
